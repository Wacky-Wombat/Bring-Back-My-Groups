[
  {
    "property": "tab.groups.add-arrow",
    "type": "checkbox",
    "label": "Add an arrow icon to tab folder.",
    "default": "true"
  },
  {
    "property": "tab.groups.add-arrow-first",
    "type": "checkbox",
    "label": "Place the arrow in front of folder icon.",
    "margin": "var(--space-small) 0 var(--space-small) 22px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.add-arrow",
          "value": true
        }
      }
    ]
  },
  {
    "property": "tab.groups.folder-outline",
    "type": "checkbox",
    "label": "Emphasize outline of tab folder icon."
  },
  {
    "property": "tab.groups.folder-outline-space-color",
    "type": "checkbox",
    "label": "Set outline color to workspace theme.",
    "margin": "var(--space-small) 0 var(--space-small) 22px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.folder-outline",
          "value": true
        }
      }
    ]
  },
  {
    "property": "tab.groups.folder-outline-group-color",
    "type": "checkbox",
    "label": "Use Zen tab group colors instead.",
    "margin": "var(--space-small) 0 var(--space-small) 44px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.folder-outline",
          "value": true
        }
      },
      {
        "conditions": [
          {
            "if": {
              "property": "tab.groups.folder-outline-space-color",
              "value": true
            }
          }
        ]
      }
    ],
    "operator": "AND"
  },
  {
    "property": "tab.groups.background",
    "type": "checkbox",
    "label": "Add a background to the folders based on the workspace theme."
  },
  {
    "property": "tab.groups.background-header-only",
    "type": "checkbox",
    "label": "Background for tab group headers only *(no group background)*.",
    "margin": "var(--space-small) 0 var(--space-small) 22px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.background",
          "value": true
        }
      }
    ]
  },
  {
    "property": "tab.groups.background-group-color",
    "type": "checkbox",
    "label": "Use tab group colors instead.",
    "margin": "var(--space-small) 0 var(--space-small) 22px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.background",
          "value": true
        }
      },
      {
        "if": {
          "property": "tab.groups.use-firefox-colors",
          "value": false
        }
      }
    ],
    "operator": "AND"
  },
  {
    "property": "tab.groups.use-firefox-colors",
    "type": "checkbox",
    "label": "Use the default Firefox colors instead of Zen colors",
    "margin": "var(--space-small) 0 var(--space-small) 22px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.background",
          "value": true
        }
      }
    ]
  },
  {
    "property": "tab.groups.use-firefox-colors-icon-only",
    "type": "checkbox",
    "label": "Only apply to folder icon. *(<- Does not work yet!)*",
    "margin": "var(--space-small) 0 var(--space-small) 44px",
    "conditions": [
      {
        "if": {
          "property": "tab.groups.use-firefox-colors",
          "value": true
        }
      },
      {
        "if": {
          "property": "tab.groups.background",
          "value": true
        }
      }
    ],
    "operator": "OR"
  }
]
